#!/usr/bin/bash -xv
# SPDX-FileCopyrightText: 2025 Taiki Akiyama
# SPDX-License-Identifier: BSD-3-Clause

ng (){
     echo ${1}
     res=1
}

res=0

###NOMAL INPUT###
out=$(echo 10 | ./nabeatu)
[ "${out}" == $'3\n6\n9' ] || ng "$LINENO"

out=$(echo 10 | ./nabeatu | wc -l)
[ "${out}" == 3 ] || ng "$LINENO"

out=$(echo 1 | ./nabeatu)
[ "${out}" == '' ] || ng "$LINENO"

out=$(echo 10.1 | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

###STRENGE INPUT###
out=$(echo 10.1 | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

out=$(echo | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

out=$(echo 10 11| ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

out=$(echo abc | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

out=$(echo „ÅÇ | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"
  
out=$(echo -10 | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

out=$(echo 0 | ./nabeatu)
[ "$?" != 0 ] || ng "$LINENO"

[ "${res}" == 0 ] && echo OK
exit $res
